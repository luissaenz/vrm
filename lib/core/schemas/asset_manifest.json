{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AssetManifest",
  "description": "Paquete estructurado de video con metadatos de calidad",
  "type": "object",
  "properties": {
    "video_id": {
      "type": "string",
      "format": "uuid",
      "description": "Identificador único del video"
    },
    "file_path": {
      "type": "string",
      "description": "Ruta local al archivo de video"
    },
    "status": {
      "type": "string",
      "enum": ["raw", "processing", "processed"],
      "description": "Estado del procesamiento del video"
    },
    "metadata": {
      "type": "object",
      "description": "Metadatos de calidad y análisis",
      "properties": {
        "wpm": {
          "type": "number",
          "minimum": 0,
          "description": "Palabras por minuto (velocidad de habla)"
        },
        "gaze_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Score de contacto visual (0-1)"
        },
        "total_duration_sec": {
          "type": "number",
          "minimum": 0,
          "description": "Duración total en segundos"
        },
        "noise_level_db": {
          "type": "number",
          "description": "Nivel de ruido ambiente en decibeles"
        }
      }
    }
  },
  "required": ["video_id", "file_path", "status"],
  "additionalProperties": false
}

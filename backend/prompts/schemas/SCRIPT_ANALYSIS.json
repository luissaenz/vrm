{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShortFormScriptAnalysis",
  "type": "object",
  "required": ["meta", "viability", "segments"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["language", "total_segments", "estimated_duration_seconds"],
      "properties": {
        "language": { "type": "string" },
        "total_segments": { "type": "integer", "minimum": 1 },
        "estimated_duration_seconds": { "type": "number", "minimum": 1 }
      }
    },
    "viability": {
      "type": "object",
      "required": ["verdict", "retention_score", "summary"],
      "properties": {
        "verdict": {
          "type": "string",
          "enum": ["viable", "moderately_viable", "not_viable"]
        },
        "retention_score": {
          "type": "number",
          "minimum": 0,
          "maximum": 10
        },
        "summary": { "type": "string" }
      }
    },
    "segments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "text"],
        "properties": {
          "id": { "type": "integer", "minimum": 1 },
          "type": {
            "type": "string",
            "enum": ["hook", "context", "development", "closure", "cta"]
          },
          "text": { "type": "string" }
        }
      }
    }
  }
}
